{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "../.tsbuild/tests",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "lib": [
            "ES2022"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "*.js",
        "*.ts"
    ],
    "references": [
        {
            "path": "../extensions"
        }
    ]
}